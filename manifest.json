{
  "manifest_version": 3,
  "name": "Better Chat Voice",
  "version": "1.1",
  "description": "This is a lightweight Chrome extension that adds a 'Read with ElevenLabs' button to each ChatGPT response, allowing you to convert ChatGPT text to high-quality speech using ElevenLabs voices (custom or built-in).",
  "author": "Glen Bland (Waypoint Labs)",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://chatgpt.com/*", "https://api.elevenlabs.io/*"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png",
      "256": "icon256.png",
      "512": "icon512.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}